<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/htp_close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/padding_edge"
            android:layout_marginEnd="@dimen/padding_edge"
            android:layout_marginRight="@dimen/padding_edge"
            android:background="@null"
            android:text="x"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/htp_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/padding_edge"
            android:layout_marginLeft="@dimen/padding_edge"
            android:layout_marginTop="@dimen/padding_edge"
            android:layout_marginEnd="@dimen/padding_edge"
            android:layout_marginRight="@dimen/padding_edge"
            android:text="@string/how_to_play"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/htp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_edge"
            android:layout_marginLeft="@dimen/padding_edge"
            android:layout_marginTop="@dimen/padding_edge"
            android:layout_marginEnd="@dimen/padding_edge"
            android:layout_marginRight="@dimen/padding_edge"
            android:text="@string/htp_goal_details"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/htp_title" />

        <ImageButton
            android:id="@+id/htp_left_nav_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/padding_edge"
            android:layout_marginRight="@dimen/padding_edge"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arrow"
            android:text="&lt;"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/htp_right_nav_btn"
            tools:srcCompat="@drawable/icon_arrow"/>

        <ImageButton
            android:id="@+id/htp_right_nav_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/padding_edge"
            android:layout_marginRight="@dimen/padding_edge"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:scaleX="-1"
            android:scaleY="-1"
            android:src="@drawable/icon_arrow"
            android:text="&gt;"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@drawable/icon_arrow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="262dp"
        android:layout_height="303dp"
        android:src="@drawable/viking_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>